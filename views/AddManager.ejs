<%- include('partials/header'); -%>
<div class="container">
    <div class="card shadow-lg o-hidden border-0 my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-dark mb-4">Add a Manager</h4>
                        </div>
                        <form class="user" action="/AddManager" method="post">
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="first_name"><strong>First Name</strong></label>
                                            <input class="form-control" type="text" id="fname" name="Fname"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="last_name"><strong>Last Name</strong></label>
                                            <input class="form-control" type="text" id="lname" name="Lname"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="username"><strong>Username</strong></label>
                                            <input class="form-control" type="text" name="Username"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="Govid"><strong>Government ID</strong></label>
                                            <input class="form-control" type="text" id="govid" name="GovID" minlength="10" maxlength="10" ></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6"><label>Gender&nbsp;&nbsp;</label>
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons"><label class="btn btn-outline-primary active">M<input type="radio" id="genderM" name="Gender" value="Male"></label><label class="btn btn-outline-primary">F<input type="radio" id="genderF" name="Gender" value="Female"></label></div>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0"><label>Date of Birth</label><input class="form-control" id="dob" type="date" name="DoB"></div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="ContactNo"><strong>Contact Number</strong></label>
                                            <input class="form-control" type="text" id="number" name="ContactNo"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="Email"><strong>Email</strong></label>
                                            <input class="form-control" type="text" id="email" name="Email"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable"><label>City&nbsp; </label>
                                            <br>
                                            <select style="width: 200px;" class="form-control form-control-sm custom-select custom-select-sm" name="CID">
                                                <option value="" selected="selected"> Select city</option>
                                                <%Cities.forEach(function (i){%>
                                                <option value="<%=i.CID%>"><%=i.Cname%></option>
                                                <%})%>
                                            </select>&nbsp;
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="HID"><strong>Hospital ID</strong></label>
                                            <select style="width: 200px;" class="form-control form-control-sm custom-select custom-select-sm" name="HID">
                                                <option value="" selected="selected"> Select hospital</option>
                                                <%HP.forEach(function (i){%>
                                                <option value="<%=i.HID%>"><%=i.HName%></option>
                                                <%})%>
                                            </select>&nbsp;
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="Address"><strong>Address</strong></label>
                                            <input class="form-control" type="text" id="Address" name="Address"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="Password"><strong>Password</strong></label>
                                            <input class="form-control" type="Password" id="password" name="Password"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="RepeatPassword"><strong>Repeat Password</strong></label>
                                            <input class="form-control" type="Password" id="repeatPassword" name="RepeatPassword"></div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block text-white btn-user" id="button" type="submit">Add Manager</button>
                            <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelector('#button').onclick = function () {
        var password = document.querySelector('#password').value,
            confirmPassword = document.querySelector('#repeatPassword').value;

        if (password == "") {
            alert("Field cannot be empty.");
        } else if (password != confirmPassword) {
            alert("Password didn't match, try again.");
            return false
        } else {
            return true
        }
    }
</script>
<%- include('partials/footer'); -%>
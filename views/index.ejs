<%- include('partials/header'); -%>

                <div class="container-fluid">
                    <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0">Book an Appointment</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-3 mb-4">
                                <div class="card-body">
                                    <a class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="ScheduleAppointment"><i class="fas fa-download fa-sm text-white-50"></i>&nbsp;Book an Appointment</a>
                                </div>
                        </div>
                    </div>
                </div>
<%if(type){%>

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="text-primary font-weight-bold m-0">Upcoming Appointments</h6>
        </div>
        <ul class="list-group list-group-flush">
            <%if(i.length){%>
            <%i.forEach(function (s) { %>

            <li class="list-group-item">
                <div class="row align-items-center no-gutters">
                    <div class="col mr-2">
                        <%dd=new Date(s.ADate)
                        dd=(dd+"").split(" ")

                        %>
                        <a href="/Appointment/<%= s.AID%>"><h6 class="mb-0"><strong>Appointment</strong></h6><span class="text-xs"> at: <%=s.ATime%><br><%=dd[0]+" "+dd[1]+" "+dd[2]+" "+dd[3]+" "%></span> </a>
                    </div>
                </div>
            </li>
            <%})}else{%>
            <li class="list-group-item">
                <div class="row align-items-center no-gutters">
                    <div class="col mr-2">
                        <h6 class="mb-0"><strong>You don't have any Appointments</strong></h6>
                    </div>
                </div>
            </li>
            <%}%>
        </ul>
    </div>
<%}%>
</div>


<%- include('partials/footer'); -%>

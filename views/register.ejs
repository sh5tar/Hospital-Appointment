<%- include('partials/header'); -%>
    <div class="container">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h4 class="text-dark mb-4">Create an Account!</h4>
                            </div>
                            <form class="user" action="/register" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="fname" placeholder="First Name" name="Fname"></div>
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="lname" placeholder="Last Name" name="Lname"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="govid" placeholder="Government ID" name="GovID"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="user" placeholder="Username" name="Uname"></div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6"><label>Gender&nbsp;&nbsp;</label>
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons"><label class="btn btn-outline-primary active">M<input type="radio" id="genderM" name="Gender" value="Male"></label><label class="btn btn-outline-primary">F<input type="radio" id="genderF" name="Gender" value="Female"></label></div>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0"><label>Date of Birth</label><input class="form-control" id="dob" type="date" name="DoB"></div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="number" placeholder="Contact Number" name="ContactN"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="city" placeholder="City" name="City"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="street" placeholder="Street" name="Street"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="bldg" placeholder="Building" name="Building"></div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="email" id="email" placeholder="Email" name="Email"></div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="password" id="password" placeholder="Password" name="Password"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="password" id="passwordRepeat" placeholder="Repeat Password"></div>
                                </div>
                                <button class="btn btn-primary btn-block text-white btn-user" type="submit">Register Account</button>
                                <hr>
                            </form>
                            <div class="text-center"><a class="small" href="forgot-password.html">Forgot Password?</a></div>
                            <div class="text-center"><a class="small" href="login.html">Already have an account? Login!</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer'); -%>